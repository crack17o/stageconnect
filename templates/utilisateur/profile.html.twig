{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h4 mb-0">Mon Profil</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h5>Informations du compte</h5>
                            <p><strong>Email :</strong> {{ user.email }}</p>
                            <p><strong>Rôles :</strong> 
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_ETUDIANT' %}
                                        Étudiant
                                    {% elseif role == 'ROLE_ENTREPRISE' %}
                                        Entreprise
                                    {% elseif role == 'ROLE_SUPERVISEUR' %}
                                        Superviseur
                                    {% endif %}
                                    {% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </p>
                        </div>

                        <div class="mt-4">
                            <a href="{{ path('app_utilisateur_edit') }}" class="btn btn-primary">Modifier mon profil</a>
                            <a href="{{ path('app_utilisateur_change_password') }}" class="btn btn-secondary">Changer mon mot de passe</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 
{% extends 'base_super.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Liste des superviseurs</h2>
        <a href="{{ path('app_super_superviseur_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Ajouter un Superviseur
        </a>
    </div>
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for superviseur in superviseurs %}
            <tr>
                <td>{{ superviseur.nom }}</td>
                <td>{{ superviseur.email }}</td>
                <td>
                    <a href="{{ path('app_super_superviseur_edit', {id: superviseur.id}) }}" class="btn btn-warning btn-sm me-1">Modifier</a>
                    <a href="{{ path('app_super_superviseur_delete', {id: superviseur.id}) }}" class="btn btn-danger btn-sm"
                       onclick="return confirm('Voulez-vous vraiment supprimer ce superviseur ?');">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucun superviseur pour le moment.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
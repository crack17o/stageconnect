{% extends 'base_entreprise.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Mes offres de stage</h2>
        <a href="{{ path('app_entreprise_offre_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Ajouter une offre
        </a>
    </div>
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Date de cr√©ation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.titre }}</td>
                <td>{{ offre.description }}</td>
                <td>
                    {% if offre.date is defined %}
                        {{ offre.date|date('d/m/Y') }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_entreprise_offre_edit', {id: offre.id}) }}" class="btn btn-warning btn-sm me-1">Modifier</a>
                    <a href="{{ path('app_entreprise_offre_delete', {id: offre.id}) }}" class="btn btn-danger btn-sm"
                       onclick="return confirm('Voulez-vous vraiment supprimer cette offre ?');">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucune offre soumise pour le moment.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
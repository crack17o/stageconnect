{% extends 'base_entreprise.html.twig' %}

{% block body %}
    <h2 class="mb-4">Soumettre une nouvelle offre de stage</h2>
    <div class="card p-4 shadow-sm">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.titre) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.titre) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>
            {# L'entreprise peut être cachée si elle est fixée côté contrôleur, sinon afficher le champ #}
            {% if form.entreprise is defined %}
                <div class="mb-3">
                    {{ form_label(form.entreprise) }}
                    {{ form_widget(form.entreprise, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.entreprise) }}
                </div>
            {% endif %}
            <button type="submit" class="btn btn-primary">Soumettre</button>
        {{ form_end(form) }}
    </div>
{% endblock %}